<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Material theme -->

    <style name="MaterialTheme" parent="MaterialTheme.Base">

    </style>

    <style name="MaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionMenuTextColor">@color/primary_text</item>
    </style>

    <!-- Button Themes -->

    <style name="ClockInButton" parent="android:style/Widget.Material.Button">
        <item name="android:background">@color/green</item>
    </style>

    <style name="ClockOutButton" parent="android:style/Widget.Material.Button">
        <item name="android:background">@color/red</item>
    </style>

    <!-- Dialog Box Styles -->

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#5fa3d0</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
